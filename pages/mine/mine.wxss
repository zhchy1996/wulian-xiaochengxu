.userinfo {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width:50vw;
  
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  width:100vw;
  border-top: 1px solid #ccc;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.usermotto navigator{
  border:1px solid #ccc;
  width:700rpx;
  height:100rpx;
  text-align: center;
  line-height: 100rpx;
  margin-top:40rpx;
  border-radius: 30rpx;
}